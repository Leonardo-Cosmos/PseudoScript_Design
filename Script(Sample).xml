<?xml version="1.0" encoding="UTF-8"?>
<script 
  xmlns="http://www.pseudoscript.org/Script"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.pseudoscript.org/Script Script.xsd">
  <dataSources>
    <dataSource id="page" category="properties" src="./page.properties" />
  </dataSources>

  <operations>
  	<operation name="OpenURL" category="Selenium">
  		<arguments>
  			<argument name="URL">
  				<dataref ref="page" key="HomePage" />
  			</argument>
  		</arguments>
  	</operation>
    <operation name="Click" category="Selenium">
    	<arguments>
    		<argument name="XPath">//*[@id="sb_form_go"]</argument>
    	</arguments>
    </operation>
    <operation name="InputText" category="Selenium">
    	<arguments>
        <argument name="XPath">
          <dataref ref="page" key="SearchInput" />
        </argument>
        <argument name="text">This is a sample</argument>
    	</arguments>
    </operation> 
  </operations>
</script>
